<div class="is-flex is-justify-content-center">
  <div class="box login">
    <h2 class ="subtitle is-4">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'input' %>
      </div>
      <div class="field">
        <%= f.label :password, :class => 'label' %>
        <%= f.password_field :password, autocomplete: "current-password", :class => 'input' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, :type => 'checkbox' %>
          <%= f.label :remember_me, :class => 'checkbox' %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", :class => 'button is-primary' %>
      </div>
    <% end %>
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
